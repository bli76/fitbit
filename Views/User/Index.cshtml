@model FitPETZ.Models.UserIndexViewModel

<partial name ="_HeaderPartial" />
<div class="row">
    <div class="challenge column">
        <h1>Challenges</h1>
        @foreach (var item in Model.User.Challenges)
        {
            <table>
                <tr>
                    <th>
                        @item.Description
                    </th>
                </tr>
                <tr>
                    <td>
                        @item.Reward Petokens
                    </td>
                </tr>
                <tr>
                    <td>
                        @item.Date.ToString("MMM dd yyyy")
                    </td>
                </tr>
                <tr>
                    <td>
                        <br>
                        @Html.ActionLink("Complete!", "CompleteChallenge", "User", new { @item.ID }, new { @class="button" })
                    </td>
                </tr>
            </table>
            <br>
            <br>
        }
        <!--
        <h2>Weekly Goal</h2>
        <table style="width:100%">
            <tr>
                <th>Progress</th>
                <td class="value">24%</td>
            </tr>
            <tr>
                <th>Reward</th>
                <td class="value">+100 Petokens</td>
            </tr>
        </table> 
        -->
        
    </div>
    <div class="map column">
        <h1 style="text-align:center">Map</h1><br>
        <p style="text-align:center">
            <a href="https://www.youtube.com/watch?v=dQw4w9WgXcQ">
                <img src="~/images/globe.png" alt="map" id="globe">
            </a>
        </p><br><br>
        <h3 style="text-align:center">@Model.Pet.Name</h3>
        <p style="text-align:center">
            <img src="~/images/@(Model.Pet.Animal).png" alt="@Model.Pet.Animal" id="pet">
        </p>
    </div>
    <div class="leaderboard column">
        <h1>Teams</h1>
        @if (Model.User.TeamID == null)
        {
            <p>Looks like you haven't joined a team yet...</p>
            @foreach (var t in Model.Teams)
            {
                <table style="width:100%">
                    <tr>
                        <th>@t.ID</th>
                        <td class="value"><i>@t.Motto</i></td>
                    </tr>
                    <tr>
                        <td colspan="2">@t.Description</td>
                    </tr>
                </table> 
            }
        }
        else
        {
            @foreach (var u in Model.Users)
            {
                <p>@u.ID</p>
            }
        }
        <br><br><br>
        <p style="text-align:right">@Model.User.Petokens<img src="~/images/Petoken.png" id="coin" alt="Tokens"></p>
    </div>
</div>